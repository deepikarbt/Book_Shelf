<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ececec"
    android:orientation="vertical">
    <!--<include
        android:id="@+id/toolin"
        layout="@layout/toolin" />-->
    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:paddingTop="20dp"
        android:id="@+id/frameLayout3"
        android:layout_below="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/imgPreview"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>


        <Button
            android:id="@+id/btnrot"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:alpha="0.25"
            />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/relativeLayout"
        android:layout_above="@+id/btnReceive"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp">


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="35dp"
        android:visibility="gone"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btnReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/mybutton"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="RECEIVE"
        android:textColor="@color/white"
        android:layout_marginBottom="79dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <com.example.deepika.rbtlib.FontLatoRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BOOK CHECK-IN"
        android:textColor="#424242"
        android:paddingTop="20dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/toolin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/txt_font"
        android:textSize="25dp"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <!--<com.example.deepika.rbtlib.FontLatoRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Checkin"
        android:paddingTop="20dp"
        android:id="@+id/textcheck"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/frameLayout3"
        android:layout_alignStart="@+id/frameLayout3" />-->

</RelativeLayout>